#include "adc.h"
#include "lcd.h"

#define NUMBER_OF_OVERFLOWS_PER_HALF_SECOND 2
unsigned char g_tick = 0;

void motor_init(void){
	DDRB|= 0x03;
	PORTB &= 0xFC;
}

void motor_direction(uint8 dir){
	if(dir==0)
			{

				PORTC &= (~(1<<PC0));
				PORTC |= (1<<PC1);
			}


			else
			{

				PORTC |= (1<<PC0);
				PORTC &= (~(1<<PC1));
			}
}




void INT0_init(void){
	SREG&=~(1<<7);
	DDRD&= ~(1<<PD2);
	GICR|=(1<<INT0);
	MCUCR|=(1<<ISC00)|(1<<ISC01);
	SREG|=(1<<7);
}

ISR(TIMER0_COMP_vect)
{
	g_tick++;
	if(g_tick == NUMBER_OF_OVERFLOWS_PER_HALF_SECOND)
	{
		//
		g_tick = 0; //clear the tick counter again to count a new 0.5 second
	}
}


void timer0_init_CTC_mode(unsigned char tick)
{
	TCNT0 = 0;
	OCR0  = tick;
	DDRB=DDRB|(1<<PD3);
	TCCR0 = (1<<WGM00) | (1<<WGM01) | (1<<COM01) | (1<<CS01);
}


int main(void)
{
	uint16 res_value;
	LCD_init();
	ADC_init();

	LCD_clearScreen();
	LCD_displayString("ADC Value = ");

    while(1)
    {
    	LCD_goToRowColumn(0,12);
    	res_value = ADC_readChannel(0);
    	LCD_intgerToString(res_value);
   timer0_init_CTC_mode(res_value);
   _delay_ms(100);
    }
}
